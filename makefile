# SOURCE ###############################################################
SRC := main.c getopt.c
OBJ = $(patsubst %.c,%.o,$(SRC))

# PROGRAMS #############################################################
CC := gcc
RM := rm -f

# LINKER ###############################################################
LDLIBS := -L. 
LDFLAGS := -lm

# BUILD ################################################################
conectivity: $(OBJ)
	$(CC) $^ -o $@ $(LDLIBS) $(LDFLAGS)

%.o: %.c
	$(CC) $< -o $@

# DEPENDENCIES #########################################################
getopt.c: getopt.h

# OTHER OPTIONS ########################################################
.PHONY: clean
clean:
	$(RM) *.o *~
